<%- include('../../partials/header') %>
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <!-- <h1>Employees </h1> -->
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Articles</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-12">
                  <form class="form-horizontal" role="form" action="/articles" enctype="multipart/form-data" method="post">
                    <div class="card card-default">
                      <div class="card-header">
                        <h3 class="card-title">Create</h3>
                      </div>
      
                      <div class="card-body">
                        <div class="row">
                          <div id="signupalert" class="alert alert-danger" style="display: none;">Error:</div>
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label>Title</label>
                              <input class="form-control" name="title" type="text" placeholder="Title">
                            </div>
                          </div>
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label>Description</label>
                              <input class="form-control" name="description" type="text" placeholder="Description">
                            </div>
                          </div>
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label>Date</label>
                              <input class="form-control" name="date" type="date" placeholder="Date">
                            </div>
                          </div>
                          <div class="col-sm-6">
                            <div class="form-group">
                              <label for="exampleInputFile">Image</label>
                              <div class="input-group">
                                <div class="custom-file">
                                  <input type="file" class="custom-file-input" id="exampleInputFile" name="uploaded">
                                  <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="card-footer">
                        <button id="btn-signup" class="btn btn-info" type="submit"><i class="icon-hand-right"></i>
                          &nbsp;Submit</button>
                      </div>
                    </div>
                  </form>

                  <div class="card">
                    <div class="card-header border-0">
                      <h3 class="card-title">Brands</h3>
                    </div>
                    <div class="card-body table-responsive p-0">
                      <table class="table table-striped table-valign-middle">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if(data.length > 0){ %>
                          <% for(var i=0; i < data.length; i++ ) { %>
                          <tr>
                            <td><%=i+1%></td>
                            <td>
                              <img width="100" src="/images/upload_article_images/<%= data[i].image %>" alt="Product 1" class="img">
                      
                            </td>
                            <td><%= data[i].title %></td>
                            <td><%= data[i].description %></td>
                          </tr>
                          <% } %>
                          <% }else{ %>
                            <tr>
                              <td class="col-md-offset-3">No data found</td>
                            </tr>
                          <% } %>
      
      
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
      
