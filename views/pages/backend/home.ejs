<%- include('../../partials/header') %>
  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <!-- <h1>Employees </h1> -->
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <!-- <li class="breadcrumb-item active">Employees</li> -->
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6">
            <form class="form-horizontal" role="form" action="/bannerImage" enctype="multipart/form-data" method="post">
              <div class="card card-default">
                <div class="card-header">
                  <h3 class="card-title">Create Banner</h3>
                </div>

                <div class="card-body">
                  <div class="row">
                    <div id="signupalert" class="alert alert-danger" style="display: none;">Error:</div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label for="exampleInputFile">Image</label>
                        <div class="input-group">
                          <div class="custom-file">
                            <input class="form-control" accept="" name="uploaded_image" type="file">
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button id="btn-signup" class="btn btn-info" type="submit"><i class="icon-hand-right"></i>
                    &nbsp;Submit</button>
                </div>
              </div>
            </form>
            <div class="card">
              <div class="card-header border-0">
                <h3 class="card-title"><B>Banners</B></h3>
              </div>
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Banner image</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(banner.length > 0){ %>
                    <% for(var i=0; i < banner.length; i++ ) { %>
                    <tr>
                      <td><%=i+1%></td>
                      <td>
                        <img width="100" src="/images/upload_banner_images/<%= banner[i].image %>" alt="Product 1" class="img">
                      </td>
                    </tr>
                    <% } %>
                    <% }else{ %>
                      <tr>
                        <td class="col-md-offset-3">No data found</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <form class="form-horizontal" role="form" action="/updateMission" enctype="multipart/form-data" method="post">
              <div class="card card-default">
                <div class="card-header">
                  <h3 class="card-title">Our Missions </h3>
                </div>

                <div class="card-body">
                  <div class="row">
                    <div id="signupalert" class="alert alert-danger" style="display: none;">Error:</div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Satisfied Clients</label>
                        <input class="form-control" name="clients" type="text" placeholder="Satisfied Clients" value="<%- mission[0].clients %>">
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Team Members</label>
                        <input class="form-control" name="members" type="text" placeholder="Team Members" value="<%- mission[0].members %>">
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Years of Experience</label>
                        <input class="form-control" name="experience" type="text" placeholder="Years of Experience" value="<%- mission[0].experience %>">
                      </div>
                    </div>                    
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Running Projects</label>
                        <input class="form-control" name="projects" type="text" placeholder="Running Projects" value="<%- mission[0].projects %>">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button id="btn-signup" class="btn btn-info" type="submit"><i class="icon-hand-right"></i>
                    &nbsp;Update</button>
                </div>
              </div>
            </form>

          </div>
        </div>
      </div>
    </section>







