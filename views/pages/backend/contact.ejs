<%- include('../../partials/header') %>
  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <!-- <h1>Employees </h1> -->
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Contact</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <form class="form-horizontal" role="form" action="/" enctype="multipart/form-data" method="post">
            
              <div class="card card-default">
                <div class="card-header">
                  <h3 class="card-title">Create</h3>
                </div>

                <div class="card-body">
                  <div class="row">
                    <div id="signupalert" class="alert alert-danger" style="display: none;">Error:</div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Mobile Number</label>
                        <input class="form-control" name="mobile_number" type="text" placeholder="Mobile Number">
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <div class="form-group">
                          <label>Email</label>
                          <input class="form-control" name="email" type="text" placeholder="Email">
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <div class="form-group">
                          <label>Address</label>
                          <input class="form-control" name="address" type="text" placeholder="Address">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button id="btn-signup" class="btn btn-info" type="submit"><i class="icon-hand-right"></i>
                    &nbsp;Submit</button>
                </div>
              </div>
            </form>

            <div class="card">
              <div class="card-header border-0">
                <h3 class="card-title">Contact</h3>
              </div>
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Mobile Number</th>
                      <th>Email</th>
                      <th>Address</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(data.length > 0){ %>
                    <% for(var i=0; i < data.length; i++ ) { %>
                    <tr>
                      <td><%=i+1%></td>
                      <td>
                        <%= data[i].mobile_number %>
                        
                      </td>
                      <td><%= data[i].email %></td>
                      <td><%= data[i].address %></td>
                    </tr>
                    <% } %>
                    <% }else{ %>
                      <tr>
                        <td class="col-md-offset-3">No data found</td>
                      </tr>
                    <% } %>


                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>








